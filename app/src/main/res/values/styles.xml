<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_screen_background" parent="Base.Theme.PlaylistMaker">
        <item name="background">@color/main_screen_background</item>
    </style>
    <style name="base_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="searh_button_style" parent="base_button_style">
        <item name="android:layout_marginTop">@dimen/refresh_button_margin</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="cornerRadius">@dimen/refresh_button_corner_radius</item>
    </style>
    <style name="main_buttons_style" parent="base_button_style">
        <item name="android:layout_marginHorizontal">@dimen/main_horizontal_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/main_buttons_radius</item>
        <item name="icon">@drawable/light_mode</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="header_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>
    <style name="settings_text_view_style">
        <item name="android:paddingVertical">@dimen/settings_vert_padding</item>
        <item name="android:paddingStart">@dimen/settings_start_padding</item>
        <item name="android:paddingEnd">@dimen/settings_switch_end_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/drawableTint</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="edit_text_field">
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:paddingStart">@dimen/search_field_start_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawablePadding">@dimen/search_icon_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="drawableTint">?attr/hintTextColor</item>
        <item name="android:lines">1</item>
        <item name="android:focusable">true</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="search_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/trouble_text_size</item>
    </style>
</resources>