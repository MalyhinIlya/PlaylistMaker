<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/back_to_main"
        style="@style/header_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_nav_bar_height"
        app:navigationIcon="@drawable/back"
        app:title="@string/settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/theme_switcher"
        android:text="@string/dark_theme"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/settings_text_view_style"/>
    <TextView
        android:id="@+id/share_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/share_app"
        style="@style/settings_text_view_style"/>
    <TextView
        android:id="@+id/need_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/need_help"
        app:drawableEndCompat="@drawable/need_help"
        style="@style/settings_text_view_style"/>

    <TextView
        android:id="@+id/user_aggreement"
        style="@style/settings_text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_aggreement"
        app:drawableEndCompat="@drawable/arrow_forward" />
</LinearLayout>