<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/album_image_length"
        android:layout_height="@dimen/album_image_length"
        android:layout_marginStart="@dimen/album_start_margin"
        android:layout_marginVertical="@dimen/album_vert_margin"
        android:layout_marginEnd="@dimen/album_end_margin"
        app:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/album_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/placeholder"

            />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/track_block_margin_top"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/base_font_size"
            android:textColor="?attr/colorOnPrimary"
            tools:text="The Beatles" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trackname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/small_font_size"
                android:textColor="?attr/drawableTint"
                tools:text="Hey Jude" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/delimiter_dot"
                app:tint="?attr/drawableTint" />
            <TextView
                android:id="@+id/track_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:textColor="?attr/drawableTint"
                tools:text="3:10" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_forward"
        app:tint="?attr/drawableTint"/>
</LinearLayout>