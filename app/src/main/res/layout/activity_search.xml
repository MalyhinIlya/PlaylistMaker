<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <Button
        android:id="@+id/back_to_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_nav_bar_height"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="@dimen/top_nav_bar_bottom_margin"
        android:text="@string/search"
        android:textColor="@color/base_font_color"
        android:textAlignment="textStart"
        android:textSize="@dimen/app_name_font_size"
        android:foreground="?attr/selectableItemBackground"
        app:icon="@drawable/back"
        app:iconGravity="start"
        app:iconTint="@color/black"
        app:iconPadding="@dimen/back_button_padding"/>
</androidx.constraintlayout.widget.ConstraintLayout>